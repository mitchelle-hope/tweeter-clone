<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTweet"
            android:layout_width="1078dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.262" />

        <ImageView
            android:id="@+id/imgFirstTweet"
            android:layout_width="164dp"
            android:layout_height="158dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tvOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Mitchelle@Hope"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toEndOf="@+id/imgFirstTweet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:text="Happy Chaplin"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toEndOf="@+id/imgFirstTweet"
            app:layout_constraintTop_toBottomOf="@+id/tvOne" />

        <ImageView
            android:id="@+id/imgMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFirstTweet"
            app:srcCompat="@drawable/img_1" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:text="12"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgMessage"
            app:layout_constraintStart_toEndOf="@+id/imgMessage"
            app:layout_constraintTop_toTopOf="@+id/imgMessage" />

        <ImageView
            android:id="@+id/imgLove"
            android:layout_width="119dp"
            android:layout_height="105dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLove"
            app:layout_constraintStart_toEndOf="@+id/tvMessage"
            app:layout_constraintTop_toTopOf="@+id/tvLove"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/tvLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:text="20"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgRecycle"
            app:layout_constraintStart_toEndOf="@+id/imgLove"
            app:layout_constraintTop_toTopOf="@+id/imgRecycle"
            app:layout_constraintVertical_bias="0.818" />

        <ImageView
            android:id="@+id/imgRecycle"
            android:layout_width="117dp"
            android:layout_height="119dp"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvResend"
            app:layout_constraintStart_toEndOf="@+id/tvLove"
            app:layout_constraintTop_toTopOf="@+id/tvResend"
            app:layout_constraintVertical_bias="0.6"
            app:srcCompat="@drawable/img_2" />

        <ImageView
            android:id="@+id/imgReload"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_marginStart="100dp"
            app:layout_constraintStart_toEndOf="@+id/tvResend"
            app:srcCompat="@drawable/img_3"
            tools:layout_editor_absoluteY="339dp" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="48"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgReload"
            app:layout_constraintStart_toEndOf="@+id/imgRecycle"
            app:layout_constraintTop_toTopOf="@+id/imgReload"
            app:layout_constraintVertical_bias="0.729" />

        <TextView
            android:id="@+id/tvUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="22"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toEndOf="@+id/imgReload"
            tools:layout_editor_absoluteY="358dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>